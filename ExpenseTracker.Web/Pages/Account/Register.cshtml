@page
@model ExpenseTracker.Web.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}


    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        @if (!ModelState.IsValid)
                        {
                            <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
                        }

                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label"> Почта</label>
                            <input asp-for="Input.Email" class="form-control" placeholder="you@example.com" />
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Name" class="form-label">Никнейм</label>
                            <input asp-for="Input.Name" class="form-control" placeholder="Иван" />
                            <span asp-validation-for="Input.Name" class="text-danger small"></span>
                        </div>
            

                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label">Пароль</label>
                            <input asp-for="Input.Password" class="form-control" type="password" />
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="btn btn-success w-100">Зарегистрироваться</button>
                    </form>

                    @section Scripts {
                        <partial name="_ValidationScriptsPartial" />
                    }
                </div>
            </div>
        </div>
    </div>

