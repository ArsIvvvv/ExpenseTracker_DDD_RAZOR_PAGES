@page
@model ExpenseTracker.Web.Pages.Account.LoginModel
@{

    ViewData["Title"] = "Вход";
}


    <div class="d-flex justify-content-center vh-100">
        <div class="col-md-6">

            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <form method="post" novalidate>
                        @if (!ModelState.IsValid)
                        {
                            <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
                        }

                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label">Почта</label>
                            <input asp-for="Input.Email" class="form-control" placeholder="you@example.com" />
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label">Пароль</label>
                            <input asp-for="Input.Password" class="form-control" type="password" />
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="btn btn-success">Войти</button>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a asp-page="/Account/Register">Нет аккаунта? Зарегистрироваться</a>
                </div>

                @section Scripts {
                    <partial name="_ValidationScriptsPartial" />

                }
            </div>
        </div>
    </div>
