@page
@model ExpenseTracker.Web.Pages.Expense.CreateExpenseModel
@{
	ViewData["Title"] = "Создание";
}


    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <form method="post" novalidate>
                        @if (!ModelState.IsValid)
                        {
                            <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
                        }

                        <div class="mb-3">
                            <label asp-for="Input.Description" class="form-label"> Описание</label>
                            <input asp-for="Input.Description" class="form-control" />
                            <span asp-validation-for="Input.Description" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Amount" class="form-label"> Сумма </label>
                            <input asp-for="Input.Amount" class="form-control" type="number"/>
                            <span asp-validation-for="Input.Amount" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Category" class="form-label"> Категория</label>
                            <select class="form-select" asp-for="Input.Category">
                                @foreach (var category in Model.CategoryList)
                                {
                                    <option value="@category"> @category</option>
                                }
                            </select>
                                <span asp-validation-for="Input.Category" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Date" class="form-label"> Дата</label>
                            <input asp-for="Input.Date" class="form-control" type="date" asp-format="{0:yyyy-MM-ddTHH:mm}" />
                            <span asp-validation-for="Input.Date" class="text-danger small"></span>
                        </div>


                        <button type="submit" class="btn btn-success ">Добавить</button>
                    </form>


                    @section Scripts {
                        <partial name="_ValidationScriptsPartial" />

                    }
                                      
                </div>
            </div>
        </div>   
    </div>  
