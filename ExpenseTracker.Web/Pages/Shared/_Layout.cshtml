<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trecker Expense</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ExpenseTracker.Web.styles.css" asp-append-version="true" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-success shadow">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-page="/Index">
                    💰 ExpenseTracker
                </a>


                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/Expense/CreateExpense">Добавить</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/Expense/Expense">Расходы</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav ms-auto">

                        @if (User.Identity?.IsAuthenticated == false)
                        {
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" asp-page="/Account/Login">Вход</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" asp-page="/Account/Register">Регистрация</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <form method="post" asp-page="/Account/Logout" class="d-inline">
                                    <button type="submit" class="nav-link btn btn-link text-light">Выйти</button>
                                </form>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link active"> Hello @User.Identity.Name!</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="bg-image"
         style="background-image: url('https://st49.stblizko.ru/images/product/223/396/577_original.jpg');
            height: 100vh">
    
            <div class="container">    
                  <main role="main" class="pb-3">
                     @RenderBody()
                  </main>
            </div>
    </div>

    <footer class="border-top footer text-light bg-success">
        <div class="container">
            <small>&copy; @DateTime.Now.Year - ExpenseTracker</small>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
